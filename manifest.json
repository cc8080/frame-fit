{
  "name" : "Frame-Fit",
  "version" : "0.5",
  "description" : "Reduce scrolling by fitting frames to content",
  "background" : { 
    "scripts": ["background.js"] 
  },
  "commands": {
          "run-frame-fit": {
            "suggested_key": {
              "default": "Ctrl+Shift+Y",
              "mac": "Command+Shift+Y"
            },
            "description": "Run Frame-Fit"
          }
  },
  "permissions" : [
    "contextMenus",
    "activeTab"
   ],
  "minimum_chrome_version" : "6.0.0.0",
  "icons" : {
    "16" : "frame-fit-16.png",
    "48" : "frame-fit-48.png",
    "128" : "frame-fit-128.png"
  },
  "manifest_version": 2
}
